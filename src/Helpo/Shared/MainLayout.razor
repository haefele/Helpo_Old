@using Helpo.Shared.Toolbars
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5">Helpo</MudText>
        
        <MudAppBarSpacer />
        
        <Toolbar @ref="_mainToolbar"/>
        
        <MudAppBarSpacer />
        
        <AuthorizeView>
            <Authorized>
                <MudButton StartIcon="@Icons.Material.Person" Color="Color.Inherit" OnClick="@Logout">@context.User.Identity?.Name Logout</MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton StartIcon="@Icons.Material.Login" Color="Color.Inherit" OnClick="@Login">Login</MudButton>
            </NotAuthorized>
        </AuthorizeView>
        
    </MudAppBar>
    <MudDrawer Open="@_drawerOpen" Elevation="1" Clipped="true">
        <MudNavMenu>
            <MudNavLink Href="" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/questions">Questions</MudNavLink>
            <MudNavLink Href="/documentation">Documentation</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="px-4">
        <MudContainer Class="mt-4">
            <CascadingValue Value="_mainToolbar">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    #nullable enable

    [Inject]
    public NavigationManager NavigationManager { get; set; } = default!;
    
    private Toolbar _mainToolbar = default!;

    private bool _drawerOpen = true;
    
    private void ToggleDrawer()
    {
        this._drawerOpen = !this._drawerOpen;
    }

    private void Login()
    {
        this.NavigationManager.NavigateTo("/login");
    }

    private void Logout()
    {
        this.NavigationManager.NavigateTo("/signout", forceLoad:true);
    }
}
